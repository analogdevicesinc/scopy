QWidget[&&property&&=true] {
    background-color: &interactive_subtle_disabled&;
	border-radius: 4px;
}

QComboBox[&&property&&=true]  {
	color: &content_default& ;
	font-size: &font_size_0_5&;
	padding-left: 8px;
	border-bottom: 0px;
	background-color: &background_primary&;
}

QComboBox[&&property&&=true]:drop-down {
	subcontrol-position: center right;
	width: 10px;
	height: 6px;
	font-size: &font_size_2&;
	text-align: left;
	margin-right: 8px;
	color: transparent;
}
