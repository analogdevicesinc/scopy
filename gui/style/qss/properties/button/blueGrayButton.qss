	border-style: outset;
	height: &unit_4&;
	background-color: &background_primary&;
	color: &content_default&;
	font-weight: 700;
	font-size: &font_size&;
	qproperty-iconSize: &unit_4&px;
}

QPushButton[&&property&&=true]:checked {
