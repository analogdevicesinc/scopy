QWidget[&&property&&=true] {
    background-color: &highlight_1&;
    border: 1px solid &background_2&;
    border-radius: 8px;
    padding: 10px;
    color: &background_1&;
    font-size: 14px;
    margin-bottom: 10px;
    text-align: left;
}

QWidget[&&property&&=true]:hover {
    border-color: &background_1&;
}

QWidget[&&property&&=true]:checked {
    background-color: &background_1&;
    border-color: &background_2&;
}

