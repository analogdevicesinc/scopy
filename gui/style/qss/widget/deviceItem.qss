QWidget[&&property&&=true] {
    background-color: &highlight_primary&;
    border: 1px solid &background_secondary&;
    border-radius: 8px;
    padding: 10px;
    color: &background_primary&;
    font-size: 14px;
    margin-bottom: 10px;
    text-align: left;
}

QWidget[&&property&&=true]:hover {
    border-color: &background_primary&;
}

QWidget[&&property&&=true]:checked {
    background-color: &background_primary&;
    border-color: &background_secondary&;
}

